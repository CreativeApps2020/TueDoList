<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText android:id="@+id/userInputListItem"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:inputType="textAutoComplete" />

        <Button android:id="@+id/addNewListItem"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="ADD Item"
            android:onClick="addListItem"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutForListItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/listItem1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="List Item 1"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium"/>

        <Button android:id="@+id/removeListItem1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:onClick="hideItem"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutForListItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/listItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="List Item 2"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed-medium" />

        <Button android:id="@+id/removeListItem2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:onClick="hideItem" />
    </LinearLayout>

</LinearLayout>